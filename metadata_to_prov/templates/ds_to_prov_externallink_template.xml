                <gmd:function>
                    <gmd:CI_OnLineFunctionCode codeList="http://www.isotc211.org/2005/resources/Codelist/gmxCodelists.xml#CI_OnLineFunctionCode" codeListValue="download"/>
                </gmd:function>
            </gmd:CI_OnlineResource>
        </gmd:onlineResource>
    </gmd:CI_Contact>
</gmd:contactInfo>